<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FEFEFE" >
        
    <ImageView
        android:id="@+id/selected_video_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:contentDescription="@string/selected_video_thumbnail" />
    
    <TextView
        android:id="@+id/selected_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/selected_video_rotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
      
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotate by how many degrees:" />
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      
       <Button
           android:layout_width="wrap_content"
           android:layout_height="48dip"
           android:layout_weight="1"
           android:text="0"
           android:tag="0"
           android:onClick="onRotateClicked" />
       
       <Button
           android:layout_width="wrap_content"
           android:layout_height="48dip"
           android:layout_weight="1"
           android:text="90"
           android:tag="90"
           android:onClick="onRotateClicked" />
       
       <Button
           android:layout_width="wrap_content"
           android:layout_height="48dip"
           android:layout_weight="1"
           android:text="180"
           android:tag="180"
           android:onClick="onRotateClicked" />
       
       <Button
           android:layout_width="wrap_content"
           android:layout_height="48dip"
           android:layout_weight="1"
           android:text="270"
           android:tag="270"
           android:onClick="onRotateClicked" />
        
    </LinearLayout>

</LinearLayout>
